<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context=".PlanetGame">
    <LinearLayout
        android:id="@+id/LL01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/CL01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/jackpot"
        android:gravity="bottom|center"
        >
        <TextView
            android:layout_marginBottom="25dp"
            android:id="@+id/energyBallPlanet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="250,565"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/sev_seg"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="5"
            android:shadowColor="@color/black"
            android:background="@android:color/transparent"
            android:outlineProvider="background"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/LL01"
        app:layout_constraintBottom_toTopOf="@id/spinButtonPlanet">
        <LinearLayout
            android:id="@+id/LL05"
            android:layout_width="370dp"
            android:layout_height="350dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/spinner_shape"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="75dp"
                android:layout_marginHorizontal="70dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/spinner1Planet"
                    android:foregroundGravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner"
                    android:scrollbars="none"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/spinner2Planet"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/spinner2Planet"
                    android:foregroundGravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner"
                    android:scrollbars="none"
                    app:layout_constraintLeft_toRightOf="@id/spinner1Planet"
                    app:layout_constraintRight_toLeftOf="@id/spinner3Planet"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/spinner3Planet"
                    android:foregroundGravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner"
                    android:scrollbars="none"
                    app:layout_constraintLeft_toRightOf="@id/spinner2Planet"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/LL05"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:rotationX="180"
            android:rotation="180"
            android:layout_marginRight="30dp"
            android:src="@drawable/arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/LL05"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/LL04"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/balance"
        android:gravity="right|center"
        app:layout_constraintTop_toTopOf="@id/spinButtonPlanet"
        app:layout_constraintBottom_toBottomOf="@id/spinButtonPlanet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/spinButtonPlanet">
        <TextView
            android:id="@+id/energyPlanet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="12341234"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:fontFamily="@font/sev_seg"
            android:shadowColor="@color/black"
            android:shadowRadius="5"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/spinButtonPlanet"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:background="@drawable/spin"
        app:layout_constraintTop_toBottomOf="@id/CL01"
        app:layout_constraintBottom_toTopOf="@id/CL03"
        app:layout_constraintLeft_toRightOf="@id/LL04"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/settingsPlanet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/settings"
        app:layout_constraintRight_toLeftOf="@id/CL03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/CL03"
        app:layout_constraintBottom_toBottomOf="@id/CL03"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CL03"
        app:layout_constraintLeft_toRightOf="@id/settingsPlanet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinButtonPlanet"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right|center"
            android:id="@+id/LL02"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/bet_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/betPlanet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/sev_seg"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/minusButtonPlanet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/minus"
            app:layout_constraintRight_toLeftOf="@id/LL02"
            app:layout_constraintTop_toTopOf="@id/LL02"
            app:layout_constraintBottom_toBottomOf="@id/LL02"/>
        <ImageButton
            android:id="@+id/plusButtonPlanet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/plus"
            app:layout_constraintTop_toTopOf="@id/minusButtonPlanet"
            app:layout_constraintLeft_toRightOf="@id/LL02"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>