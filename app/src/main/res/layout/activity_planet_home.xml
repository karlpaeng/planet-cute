<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context=".PlanetHome">

    <ImageView
        android:id="@+id/ivAppLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/app_icon_nobg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/CL04"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivAppLogo"
        app:layout_constraintBottom_toTopOf="@id/CL05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageButton
            android:id="@+id/ibPlayBtn"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:background="@drawable/play_btn"
            app:layout_constraintBottom_toTopOf="@id/ibExitBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageButton
            android:id="@+id/ibExitBtn"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:background="@drawable/exit_btn"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/ibPlayBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CL04"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/CL05">
        <CheckBox
            android:id="@+id/cbIAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree with the"
            android:checked="true"
            android:fontFamily="@font/jett_brains_mono_bold"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:theme="@style/cbTheme"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toTopOf="@id/ibPolicyBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageButton
            android:id="@+id/ibPolicyBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/policy_btn"
            app:layout_constraintTop_toBottomOf="@id/cbIAgree"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>